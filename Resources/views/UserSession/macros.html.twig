{% macro list(user_sessions) %}
    {% if user_sessions|length == 0 %}
        <div class="text-muted text-center">{{ 'qcm_admin.empty.user_session'|trans }}</div>
    {% else %}
    <table class="table table-striped table-bordered col-xs-6">
        <thead>
            <tr>
                <th>{{ 'qcm_core.label.username'|trans }}</th>
                <th>{{ 'qcm_core.label.email'|trans }}</th>
                <th>{{ 'qcm_core.label.enabled'|trans }}</th>
                <th>{{ 'qcm_core.label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for user_session in user_sessions %}
            <tr>
                <td>{{ user_session.user.username }}</td>
                <td>{{ dump(user_session.configuration) }}</td>
                <td>
                    <a href="{{ path('qcm_admin_user_session_show', { id : user_session.id }) }}"><img src="{{ asset('bundles/qcmadmin/images/list.png') }}" title="{{ 'qcm_core.button.show'|trans }}" /></a>
                    <a href="{{ path('qcm_admin_user_session_edit', { id : user_session.id }) }}"><img src="{{ asset('bundles/qcmadmin/images/edit.png') }}" title="{{ 'qcm_core.button.edit'|trans }}" /></a>
                    <a href="#"><img src="{{ asset('bundles/qcmadmin/images/delete.png') }}" title="{{ 'qcm_core.button.delete'|trans }}" /></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endif %}
{% endmacro %}

{% macro show(user_session) %}
    <table class="table table-striped table-bordered col-xs-6">
        <thead>
        <tr>
            <th>{{ 'qcm_core.label.username'|trans }}</th>
            <th>{{ 'qcm_core.label.email'|trans }}</th>
            <th>{{ 'qcm_core.label.enabled'|trans }}</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ user_session.user.username }}</td>
                <td>{{ dump(user_session.configuration) }}</td>
            </tr>
        </tbody>
    </table>
{% endmacro %}
