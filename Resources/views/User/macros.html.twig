{% macro list(users) %}
    {% import '@QcmCore/Macros/actions.html.twig' as actions %}
    {% if users|length == 0 %}
        <div class="text-muted text-center">{{ 'qcm_admin.empty.user'|trans }}</div>
    {% else %}
    <table class="table table-striped table-bordered col-xs-6">
        <thead>
            <tr>
                <th>{{ 'qcm_core.label.username'|trans }}</th>
                <th>{{ 'qcm_core.label.email'|trans }}</th>
                <th>{{ 'qcm_core.label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {% if false == user.hasRole('ROLE_ADMIN') %}
                        <a href="{{ path('qcm_admin_user_session_add', { user : user.id }) }}"><img src="{{ asset('bundles/qcmadmin/images/question.png') }}" title="{{ 'qcm_core.button.add_questionnaire'|trans }}" /></a>
                    {% endif %}
                    <a href="{{ path('qcm_admin_user_show', { id : user.id }) }}"><img src="{{ asset('bundles/qcmadmin/images/list.png') }}" title="{{ 'qcm_core.button.show'|trans }}" /></a>
                    <a href="{{ path('qcm_admin_user_edit', { id : user.id }) }}"><img src="{{ asset('bundles/qcmadmin/images/edit.png') }}" title="{{ 'qcm_core.button.edit'|trans }}" /></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ actions.pagination(users) }}
    {% endif %}
{% endmacro %}

{% macro show(user) %}
    {% import '@QcmCore/Macros/actions.html.twig' as actions %}
    {% from 'QcmAdminBundle:UserSession:macros.html.twig' import list_by_user %}

    <table class="table table-striped table-bordered col-xs-6">
        <thead>
        <tr>
            <th>{{ 'qcm_core.label.username'|trans }}</th>
            <th>{{ 'qcm_core.label.email'|trans }}</th>
            <th>{{ 'qcm_core.label.enabled'|trans }}</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ 'qcm_core.enabled'|transchoice(user.enabled) }}</td>
            </tr>
        </tbody>
    </table>

    {{ list_by_user(user.questionnaires) }}
{% endmacro %}
