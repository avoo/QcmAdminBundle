{% macro list(questions) %}
    {% import '@QcmCore/Macros/actions.html.twig' as actions %}
    {% if questions|length == 0 %}
        <div class="text-muted text-center">{{ 'qcm_admin.empty.question'|trans }}</div>
    {% else %}
    <div class="actions-menu">
        {{ actions.add(path('qcm_admin_question_add')) }}
    </div>
    <table class="table table-striped table-bordered col-xs-6">
        <thead>
            <tr>
                <th>{{ 'qcm_core.label.question'|trans }}</th>
                <th>{{ 'qcm_core.label.category'|trans }}</th>
                <th>{{ 'qcm_core.label.answer_type'|trans }}</th>
                <th>{{ 'qcm_core.label.enabled'|trans }}</th>
                <th>{{ 'qcm_core.label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for question in questions %}
            <tr>
                <td>{{ question.name }}</td>
                <td>{{ question.category.name }}</td>
                <td>{{ ('qcm_core.label.' ~ question.type)|trans }}</td>
                <td>{{ 'qcm_core.enabled'|transchoice(question.enabled) }}</td>
                <td>
                    <a href="{{ path('qcm_admin_question_show', { id : question.id }) }}"><img src="{{ asset('bundles/qcmadmin/images/list.png') }}" title="{{ 'qcm_core.button.show'|trans }}" /></a>
                    <a href="{{ path('qcm_admin_question_edit', { id : question.id }) }}"><img src="{{ asset('bundles/qcmadmin/images/edit.png') }}" title="{{ 'qcm_core.button.edit'|trans }}" /></a>
                    <a href="#"><img src="{{ asset('bundles/qcmadmin/images/delete.png') }}" title="{{ 'qcm_core.button.delete'|trans }}" /></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endif %}
{% endmacro %}

{% macro show(question) %}
    <table class="table table-striped table-bordered col-xs-6">
        <thead>
        <tr>
            <th>{{ 'qcm_core.label.question'|trans }}</th>
            <th>{{ 'qcm_core.label.category'|trans }}</th>
            <th>{{ 'qcm_core.label.answer_type'|trans }}</th>
            <th>{{ 'qcm_core.label.enabled'|trans }}</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ question.name }}</td>
                <td>{{ question.category.name }}</td>
                <td>{{ ('qcm_core.label.' ~ question.type)|trans }}</td>
                <td>{{ 'qcm_core.enabled'|transchoice(question.enabled) }}</td>
            </tr>
        </tbody>
    </table>
{% endmacro %}
