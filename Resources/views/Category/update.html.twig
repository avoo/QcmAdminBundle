{% extends 'QcmAdminBundle::layout.html.twig' %}

{% block title %}{{ 'qcm_admin.category.update'|trans({ '%name%': category.name }) }}{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <form novalidate action="{{ path('qcm_admin_category_edit', { id : category.id }) }}" {{ form_enctype(form) }} method="POST">
                <div class="box-body">
                    {{ form_widget(form) }}
                    {{ actions.cancel(path('qcm_admin_category_list')) }}
                    {{ actions.submit() }}
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
