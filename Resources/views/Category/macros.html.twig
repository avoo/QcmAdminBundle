{% macro list(categories) %}
    {% if categories|length == 0 %}
        <div class="text-muted text-center">{{ 'qcm_admin.empty.category'|trans }}</div>
    {% else %}
    <table class="table table-striped table-bordered col-xs-6">
        <thead>
            <tr>
                <th>{{ 'qcm_core.label.name'|trans }}</th>
                <th>{{ 'qcm_core.label.description'|trans }}</th>
                <th>{{ 'qcm_core.label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td>{{ category.description }}</td>
                <td>
                    <a href="{{ path('qcm_admin_category_show', { id : category.id }) }}"><img src="{{ asset('bundles/qcmadmin/images/list.png') }}" title="{{ 'qcm_core.button.show'|trans }}" /></a>
                    <a href="{{ path('qcm_admin_category_edit', { id : category.id }) }}"><img src="{{ asset('bundles/qcmadmin/images/edit.png') }}" title="{{ 'qcm_core.button.edit'|trans }}" /></a>
                    <a href="#"><img src="{{ asset('bundles/qcmadmin/images/delete.png') }}" title="{{ 'qcm_core.button.delete'|trans }}" /></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endif %}
{% endmacro %}

{% macro show(category) %}
    <table class="table table-striped table-bordered col-xs-6">
        <thead>
        <tr>
            <th>{{ 'qcm_core.label.name'|trans }}</th>
            <th>{{ 'qcm_core.label.description'|trans }}</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ category.name }}</td>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>
{% endmacro %}
